        {
                "name":"is_self",
                "fieldLabel": "是否自营",
                "xtype":"combobox",
                "dataModel":"common_oppo_boolean_status"
              },
              {"fieldLabel":"审核状态",
                "name": "audit_status",
                        "xtype":"combobox",
                        "dataModel":"op_audit_status"
              },
              {"fieldLabel":"views",
                "name": "views"
              }

            ]}
