          "format"   : "Y-m-d",
          "notNull":true
        },
        {"fieldLabel":"到期时间",
          "name": "expiry_time",
          "xtype": "datefield",
          "format"   : "Y-m-d",
          "notNull":true
        }

      ]},
      {"name":"其他操作","items":[
              {"fieldLabel":"置顶",
                "name": "is_top",
                "xtype":"combobox",
                "dataModel":"common_boolean_status"
